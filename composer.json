{
    "name": "vstelmakh/twig-url-highlight-bundle",
    "description": "Symfony bundle for twig url highlight extension",
    "keywords": ["symfony", "bundle", "highlight", "url", "html"],
    "type": "symfony-bundle",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "symfony/config": "^2.7|^3|^4|^5",
        "symfony/dependency-injection": "^2.7|^3|^4|^5",
        "symfony/http-kernel": "^2.7|^3|^4|^5",
        "vstelmakh/twig-url-highlight": "^1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.3",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "VStelmakh\\TwigUrlHighlightBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VStelmakh\\TwigUrlHighlightBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test:phpcs": "vendor/bin/phpcs -n",
        "test:phpstan": "vendor/bin/phpstan analyse --ansi --no-progress",
        "test:phpunit": "vendor/bin/phpunit --colors=always",
        "test:all": [
            "@test:phpcs",
            "@test:phpstan",
            "@test:phpunit"
        ]
    },
    "scripts-descriptions": {
        "test:phpcs": "Run PHP Code Sniffer",
        "test:phpstan": "Run PHP Stan",
        "test:phpunit": "Run PHP Unit",
        "test:all": "Run all code analysis and tests"
    }
}
